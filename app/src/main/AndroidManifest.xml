<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.project.cekjadwaldokter">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon_applikasi"
        android:label="Cek Jadwal Dokter"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon_applikasi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MenuUtama.Home"
            android:screenOrientation="portrait" />

        <activity
            android:name=".DaftarDokterSpesialis.ListDokterSpesialis"
            android:label="Daftar Spesialis"
            android:screenOrientation="portrait" />

        <activity android:name=".InfoDokterSpesialis.NamaDokter"
            android:parentActivityName=".MenuUtama.Home">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MenuUtama.Home" /> />
        </activity>

        <activity
            android:name=".MenuUtama.Musik"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CustomeList.ListSpesialis"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewDokterSpesialis.ListInfoDokterSpesialis"
            android:screenOrientation="portrait"
            android:label="Dokter Spesialis"/>

        <activity android:name=".Akun.LoginActivity" />

        <activity android:name=".Akun.DaftarActivity" />

        <activity android:name=".Layanan.Bantuan"
            android:label="Bantuan" />

        <activity android:name=".Layanan.Tentang"
            android:label="Tentang" />

        <activity android:name=".MenuTambah.MenuTambahSpesialis"
            android:label="Tambah"></activity>
    </application>

</manifest>