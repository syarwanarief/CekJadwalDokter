<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2pt"
    android:layout_marginLeft="2pt"
    app:cardBackgroundColor="#FF0DBFAC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:layout_marginBottom="1pt"
        android:layout_marginLeft="1pt"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_gravity="center"
            app:cardBackgroundColor="#b3ffff"
            app:cardCornerRadius="20pt">
            <ImageView
                android:layout_height="20pt"
                android:layout_width="20pt"
                android:id="@+id/idGambar"
                android:src="@mipmap/rs_abdul_moeloek"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/idNamaRS"
                    android:layout_width="match_parent"
                    android:layout_height="25pt"
                    android:gravity="center|top"
                    android:text="Nama RS"
                    android:textColor="#000"
                    android:textSize="7pt"
                    android:textStyle="italic|bold" />
    </LinearLayout>

</android.support.v7.widget.CardView>