<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="2pt">

        <android.support.v7.widget.CardView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/view2"
            app:cardCornerRadius="15pt"
            android:layout_marginTop="2pt">
            <ImageView
                android:layout_height="20pt"
                android:layout_width="20pt"
                android:id="@+id/idGambar"
                android:layout_toRightOf="@id/idNamaRS"
                android:src="@mipmap/rs_abdul_moeloek"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/view2"
            app:cardCornerRadius="19dp"
            android:layout_marginLeft="2pt"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idNamaRS"
                    android:layout_width="match_parent"
                    android:layout_height="20pt"
                    android:layout_marginLeft="5pt"
                    android:gravity="center|left"
                    android:text="Nama RS"
                    android:textColor="#000"
                    android:textSize="7pt"
                    android:textStyle="italic|bold" />
                <TextView
                    android:id="@+id/idAlamatRS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5pt"
                    android:layout_marginRight="25pt"
                    android:gravity="center|left"
                    android:text="Alamat RS"
                    android:layout_below="@id/idNamaRS"
                    android:textColor="#000"
                    android:textSize="5pt"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="25pt"
                    android:layout_height="25pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_next"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>